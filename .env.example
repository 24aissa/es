# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (PostgreSQL + PostGIS)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=routepool
DB_USER=postgres
DB_PASSWORD=your-db-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# OTP Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Mapbox/OSRM Configuration
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
OSRM_API_URL=http://router.project-osrm.org

# AI Service Configuration
AI_SERVICE_URL=http://localhost:5000
AI_SERVICE_API_KEY=your-ai-service-key

# Route Matching Configuration
MAX_DETOUR_MINUTES=15
MIN_EXTRA_TIME_MINUTES=5
MAX_PICKUP_RADIUS_KM=2

# Pricing Configuration
BASE_FARE_PER_KM=1.5
BASE_FARE_PER_MINUTE=0.5
MINIMUM_FARE=5.0

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_PORT=3001

# Redis Configuration (for real-time tracking)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=