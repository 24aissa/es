# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/babyvibe
DB_NAME=babyvibe

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Delivery Services API Keys (Algeria)
DZEXPRESS_API_KEY=your-dzexpress-api-key
JETX_API_KEY=your-jetx-api-key
EXPRESS_EMS_API_KEY=your-express-ems-api-key
YALIDINE_API_KEY=your-yalidine-api-key

# Payment Gateway Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
CIB_API_KEY=your-cib-api-key

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Default Language
DEFAULT_LANGUAGE=ar

# Admin Configuration
ADMIN_EMAIL=admin@babyvibe.com
ADMIN_PASSWORD=change-in-production