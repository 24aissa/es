{
  "name": "babyvibe",
  "version": "1.0.0",
  "description": "Multi-platform application for parents to track child growth and suggest appropriate products",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "build": "npm run build:client",
    "build:client": "cd src/client && npm run build",
    "test": "jest",
    "lint": "eslint src/",
    "install:client": "cd src/client && npm install",
    "install:server": "npm install",
    "postinstall": "npm run install:client"
  },
  "keywords": ["baby", "parenting", "growth-tracking", "ecommerce", "algeria"],
  "author": "BabyVibe Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "dotenv": "^16.3.1",
    "i18next": "^23.4.4",
    "i18next-fs-backend": "^2.1.5",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "moment": "^2.29.4",
    "node-cron": "^3.0.2",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "eslint": "^8.47.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}