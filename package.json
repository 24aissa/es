{
  "name": "routepool",
  "version": "0.1.0",
  "description": "Smart ridesharing application connecting passengers traveling same route via AI",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "build": "npm run build:client",
    "build:client": "cd src/client && npm run build",
    "test": "jest",
    "lint": "eslint src/",
    "install:client": "cd src/client && npm install",
    "install:server": "npm install",
    "postinstall": "npm run install:client"
  },
  "keywords": [
    "ridesharing",
    "carpooling",
    "route-matching",
    "ai",
    "mobility",
    "transport"
  ],
  "author": "RoutePool Team",
  "license": "MIT",
  "dependencies": {
    "@mapbox/polyline": "^1.2.1",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "geolib": "^3.3.4",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "twilio": "^4.23.0"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
